<div class="row-fluid inset-text-background">
  <h3 class="inset-text">
    Judul: <%=t '.title', :default => @nl.title %> <br>
    <span class='inset-text2'>
        Kategori:
      <b><%= @nl.category %>,</b>
      Tanggal Terbit:
      <b><%= @nl.publish_date %>.</b>
    </span>
  </h3>
</div>
<fieldset class='form-horizontal'>
<div class="page-header">
    <%#=t '.title', :default => model_class.model_name.human.pluralize %>
</div>
<div class="news-content span9">
  <b class ='lead'><strong>Isi Berita:</strong></b>
  <p>
    <%= @nl.content %>
  </p>
  <b>Photo</b>
  <p>
    <a href=#photoModal data-toggle="modal"><%= image_tag @nl.photo.url(:thumb), :class => 'img-polaroid' %></a>
  </p>
</div>
<div id="photoModal" class ="modal hide fade img-polaroid"><%= image_tag @nl.photo.url %></div>
<div class="span2">
  <p><strong>Berita Oleh: <%= @nl.submitted_by %></strong></p>
  <p><strong>Dipublish Oleh: <%= @nl.published_by %></strong></p>
  <%#= link_to 'Kembali', newslayout_index_path,:class => "btn btn-danger" %>
  <%#= link_to 'Kembali', :back,:class => "btn btn-danger" %>
  <%= link_to_function 'Kembali', "history.back()",:class => "btn btn-danger" %>
</div>


</fieldset>
<iframe id="open_here" class="modal fade hide img-polaroid">
</iframe>

