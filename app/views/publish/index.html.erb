<% if current_user.level == "1" %>
  <div class="row-fluid inset-text-background">
    <h3 class="inset-text"><span><%=t '.title', :default => "Daftar Berita" %></span></h3>
  </div>
  <%#= link_to 'Submit Berita', new_news_path, :class => 'btn btn-primary' %>
  <div class="tabbable">
    <ul class="nav-tabs nav">
        <li class='active'><a href="#pk-unpublished" data-toggle="tab">Belum diterbitkan</a></li>
        <li><a href="#pk-published" data-toggle="tab">Sudah diterbitkan</a></li>
        <li><a href="#pk-reserved" data-toggle="tab">*reserved*</a></li>
    </ul>

    <div class="tab-content">
        <div class="tab-pane fade active in" id="pk-unpublished">
          <div id="search-unpublished" class="form-inline">
            <p>Cari berita</p>
            <%= form_tag publish_index_path, :method => "get", :remote => true do %>
            <p>
              <%= select_tag :cat, options_for_select(cats), prompt:"Pilih kategori" %>
              <%= text_field_tag :date, params[:date], :class => 'pickdate', :placeholder => "Tanggal terbit..." %>
              <%= submit_tag "Cari Berita", :class => 'btn btn-primary' %><br />
            </p>
            <% end %>
          </div>
          <div id="unpublished"></div> 
        </div>
        <div class="tab-pane fade" id="pk-published">
          <div id="search-published" class="form-inline">
            <p>Cari berita</p>
            <%= form_tag publish_index_path, :method => "get", :remote => true do %>
            <p>
              <%= select_tag :cat, options_for_select(cats), prompt:"Pilih kategori" %>
              <%= text_field_tag :date, params[:date], :class => 'pickdate', :placeholder => "Tanggal terbit..." %>
              <%= submit_tag "Cari Berita", :class => 'btn btn-primary' %><br />
            </p>
            <% end %>
          </div>
          <div id="published"></div>
        </div>
        <div class="tab-pane fade" id="pk-reserved">*reserved*</div>
    </div>
  </div>
<% else %>
  <div class="well text-center">Maaf, anda tidak dapat akses ke halaman ini.</div>
  
<% end %>
<br />