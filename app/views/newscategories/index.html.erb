<div class="page-header">
  <h1><%#=t '.title', :default => model_class.model_name.human.pluralize %>
      <%=t '.title', :default => "Kategori Berita" %>    
  </h1>
</div>
<%= link_to 'Tambah kategori', new_newscategory_path, :class =>"btn btn-primary" %>
<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>
  <tbody>
<% @newscategories.each do |newscategory| %>
  <tr>
    <td><%= newscategory.category %></td>
    <td><%= link_to 'Show', newscategory, :class => 'btn btn-mini' %></td>
    <td><%= link_to 'Edit', edit_newscategory_path(newscategory), :class => 'btn btn-mini' %></td>
    <td><%= link_to 'Destroy', newscategory, method: :delete, data: { confirm: 'Are you sure?' },
                      :class => 'btn btn-mini btn-danger' %></td>
  </tr>
<% end %>
  </tbody>
</table>

