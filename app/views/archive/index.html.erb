<div class="row-fluid inset-text-background">
    <h3 class="inset-text"><%=t '.title', :default => "Arsip Berita" %></h3>    
</div> <br>

  <div class="tabbable">
    <ul class="nav-tabs nav">
        <li class='active'><a href="#pk-advanced-search" data-toggle="tab">Pencarian Detail</a></li>
        <li><a href="#pk-text-search" data-toggle="tab">Pencarian Kata Kunci</a></li>
    </ul>

    <div class="tab-content">
        <div class="tab-pane fade active in" id="pk-advanced-search">
          <div id="search-archive" class="form-inline">
            <p>Pastikan untuk mengisi semua pilihan berikut!</p>    
            <%= form_tag archive_index_path, :method => "get", :remote => true do %>
              <p>
            <%= text_field_tag :dates, params[:dates], :class => 'pickdate', :placeholder => "Tanggal terbit..." %>     
              <%= select_tag :cat, options_for_select(cats), prompt: "Pilih kategori..." %>
              <%= select_tag :journalists, options_for_select(journalists), prompt:"Pilih Jurnalis..." %>
              <%= select_tag :stat, options_for_select([['Published', 1],['Unpublished', 2]]), prompt:"Status berita..." %>
            <%= submit_tag "Cari Arsip", :class => 'btn btn-primary' %><br />
              </p>
            <% end %>
          </div>
        </div>
        <div class="tab-pane fade" id="pk-text-search">
    			<div id="textsearch-archive" class="form-inline">
    			  <p>Cari berdasarkan kata kunci</p>		
    			  <%= form_tag archive_index_path, :method => "get", :remote => true do %>
    			    <p>
    				<%= text_field_tag :keyword, params[:keyword], :placeholder => "Kata kunci..." %>    	
    			    <%= submit_tag "Cari Arsip", :class => 'btn btn-primary' %><br />
    			    </p>
    			  <% end %>
    			</div>
        </div>
    </div>
  </div>

<div id="archive-result"></div>
<div id="archive-textresult"></div>

<div id="newsModal" class="modal fade hide img-polaroid">
  <fieldset class='form-horizontal'>
    <div class="page-header">
        <%#=t '.title', :default => model_class.model_name.human.pluralize %>
    </div>
      <div class="news-content span9">
        <b class ='lead'>Isi Berita:</b>
        <p>
          <%#= news.content %>
        </p>
        <b>Photo</b>
        <p>
          <a href=#photoModal data-toggle="modal"><%#= image_tag news.photo.url(:thumb), :class => 'img-polaroid' %></a>
        </p>
      </div>
    <div id="photoModal" class ="modal hide fade img-polaroid"><%#= image_tag @nl.photo.url %></div>
  </fieldset>
</div>
<br />